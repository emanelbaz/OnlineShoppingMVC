<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Online Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="container py-4">
    <nav class="navbar navbar-expand bg-dark mb-4 px-3">
        @if (User.Identity.IsAuthenticated)
        {
            <span class="text-white me-2">Hello, @User.Identity.Name!</span>
            <a class="btn btn-outline-light btn-sm me-3" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
        }
        else
        {
            <a class="btn btn-outline-light btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="btn btn-primary btn-sm me-3" asp-area="Identity" asp-page="/Account/Register">Register</a>
        }
        <a class="btn btn-link text-white" href="@Url.Action("Index","Product")">Products</a>
        <a class="btn btn-link text-white" href="@Url.Action("Index","Cart")">Cart</a>
        <a class="btn btn-link text-white" href="@Url.Action("Index","Orders")">Orders</a>
    </nav>

    @RenderBody()
    @RenderSection("Scripts", required: false)
</body>
</html>
