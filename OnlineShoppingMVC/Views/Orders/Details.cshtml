@model Order
@{
    ViewData["Title"] = "Order Details";
}

<h2>Order #@Model.Id</h2>

<p><strong>Date:</strong> @Model.OrderDate</p>
<p><strong>Subtotal:</strong> @Model.Subtotal.ToString("N2")</p>
<p><strong>Discount:</strong> @Model.Discount.ToString("N2")</p>
<p><strong>Total:</strong> @Model.Total.ToString("N2")</p>

<h4>Items</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th class="text-end">Qty</th>
            <th class="text-end">UnitPrice</th>
            <th class="text-end">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Items)
        {
            <tr>
                <td>@i.ProductName</td>
                <td class="text-end">@i.Quantity</td>
                <td class="text-end">@i.UnitPrice.ToString("N2")</td>
                <td class="text-end">@i.LineTotal.ToString("N2")</td>
            </tr>
        }
    </tbody>
</table>
