@model CartSummaryVm
@{
    ViewData["Title"] = "Cart";
}
<h2>Cart</h2>

@if (TempData["msg"] is string m)
{
    <div class="alert alert-success">@m</div>
}

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-bordered align-middle">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-end">Unit</th>
                <th class="text-end">Qty</th>
                <th class="text-end">Subtotal</th>
                <th class="text-end">Discount</th>
                <th class="text-end">Total</th>
                <th style="width:120px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td>
                        <div class="fw-bold">@i.Name</div>
                        <div class="text-muted small">Discount: @i.DiscountPercent %</div>
                    </td>
                    <td class="text-end">@i.UnitPrice.ToString("N2")</td>
                    <td class="text-end">@i.Quantity</td>
                    <td class="text-end">@i.ItemSubtotal.ToString("N2")</td>
                    <td class="text-end">@i.ItemDiscount.ToString("N2")</td>
                    <td class="text-end">@i.ItemTotal.ToString("N2")</td>
                    <td class="text-end">
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="productId" value="@i.ProductId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Subtotal</th>
                <th class="text-end">@Model.Subtotal.ToString("N2")</th>
                <th class="text-end">@Model.DiscountTotal.ToString("N2")</th>
                <th class="text-end">@Model.Total.ToString("N2")</th>
                <th></th>
            </tr>
        </tfoot>
    </table>
    <a asp-action="Checkout" class="btn btn-success">Checkout</a>
    @if (Model.ThresholdApplied > 0)
    {
        <div class="alert alert-success">
            Discount applied because subtotal ≥ @Model.ThresholdApplied.ToString("N2")
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            No discount yet. Discount starts at subtotal ≥ 5,000.00
        </div>
    }
}
